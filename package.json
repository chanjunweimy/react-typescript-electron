{
  "name": "react-typescript-electron",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-scripts-ts": "2.16.0"
  },
  "main": "electron/electron-starter.js",
  "homepage": "./",
  "scripts": {
    "react-start": "react-scripts-ts start",
    "react-build": "react-scripts-ts build",
    "test": "react-scripts-ts test --env=jsdom",
    "start": "nf start -p 3000",
    "electron": "electron .",
    "electron-start": "node src/electron-wait-react",
    "electron-build": "electron-packager ./ ReactTypeScriptElectron --platform=win32 --arch=x64 --overwrite",
    "build": "yarn react-build && yarn electron-build",
    "eject": "react-scripts-ts eject"
  },
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.2",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "electron": "^2.0.5",
    "electron-packager": "^12.1.0",
    "foreman": "^3.0.1",
    "typescript": "^2.9.2"
  }
}
